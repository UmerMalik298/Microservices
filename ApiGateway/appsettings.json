    "Routes": {
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": { "Path": "/orders/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": { "Path": "/products/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": { "Path": "/users/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      }
    },

    "Clusters": {
      "orders-cluster": {
        "Destinations": {
          "d1": { "Address": "http://orders-api:8080/" }
        }
      },
      "products-cluster": {
        "Destinations": {
          "d1": { "Address": "http://products-api:8080/" }
        }
      },
      "users-cluster": {
        "Destinations": {
          "d1": { "Address": "http://users-api:8080/" }
        }
      }
    }

